<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.arneca.evyap">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <application
        android:name="com.arneca.evyap.EvyapApp"
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.Evyap">
        <activity
            android:name=".ui.activity.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.TransparentStatus">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activity.MainActivity"
            android:theme="@style/AppTheme.TransparentStatus"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".ui.activity.LoginActivity"
            android:theme="@style/AppTheme.TransparentStatus"
            android:screenOrientation="portrait">
        </activity>
        <activity
        android:name=".ui.activity.SettingsActivity"
        android:theme="@style/AppTheme.TransparentStatus"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".ui.activity.ProductLineActivity"
            android:theme="@style/AppTheme.TransparentStatus"
            android:screenOrientation="portrait"></activity>

        <activity
            android:name=".ui.activity.PreferencesActivity"
            android:theme="@style/AppTheme.TransparentStatus"
            android:screenOrientation="portrait"></activity>

        <activity
            android:name=".ui.activity.RestorePasswordActivity"
            android:theme="@style/AppTheme.TransparentStatus"
            android:screenOrientation="portrait"></activity>

        <activity
            android:name=".ui.activity.ValidateSecurtyCodeActivity"
            android:theme="@style/AppTheme.TransparentStatus"
            android:screenOrientation="portrait"></activity>

        <activity
            android:name=".ui.activity.ChangePasswordActivity"
            android:theme="@style/AppTheme.TransparentStatus"
            android:screenOrientation="portrait"></activity>


    </application>

</manifest>